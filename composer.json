{
	"name": "dereuromark/cakephp-calendar",
	"type": "cakephp-plugin",
	"description": "A CakePHP plugin to easily create calendars.",
	"keywords": [
		"cakephp",
		"plugin",
		"calendar",
		"helper",
		"events"
	],
	"homepage": "https://github.com/dereuromark/cakephp-calendar",
	"license": "MIT",
	"authors": [
		{
			"name": "Mark Scherer",
			"homepage": "https://www.dereuromark.de",
			"role": "Maintainer"
		}
	],
	"require": {
		"php": ">=7.2",
		"cakephp/cakephp": "^4.0.0"
	},
	"require-dev": {
		"fig-r/psr2r-sniffer": "dev-master"
	},
	"autoload": {
		"psr-4": {
			"Calendar\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Calendar\\Test\\": "tests/",
			"Cake\\Test\\": "vendor/cakephp/cakephp/tests/",
			"TestApp\\": "tests/TestApp/src/"
		}
	},
	"support": {
		"source": "https://github.com/dereuromark/cakephp-calendar"
	},
	"scripts": {
		"test": "php phpunit.phar",
		"test-setup": "[ ! -f phpunit.phar ] && wget https://phar.phpunit.de/phpunit-8.4.3.phar && mv phpunit-8.4.3.phar phpunit.phar || true",
		"test-coverage": "php phpunit.phar --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
		"phpstan": "phpstan analyse -c tests/phpstan.neon -l 5 src/",
		"phpstan-setup": "cp composer.json composer.backup && composer require --dev phpstan/phpstan:^0.12 && mv composer.backup composer.json",
		"cs-check": "phpcs --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --ignore=/tests/test_files/ --extensions=php -p src/ tests/",
		"cs-fix": "phpcbf --standard=vendor/fig-r/psr2r-sniffer/PSR2R/ruleset.xml --ignore=/tests/test_files/ --extensions=php -p src/ tests/"
	}
}
